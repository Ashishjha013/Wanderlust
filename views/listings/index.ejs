<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover, .filter.active {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 2px solid rgb(159, 159, 159);
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <div class="filter <%= selectedCategory === 'Trending' ? 'active' : '' %>" data-category="Trending">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filter <%= selectedCategory === 'Room' ? 'active' : '' %>" data-category="Room">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Room</p>
  </div>

  <div class="filter <%= selectedCategory === 'Iconic Cities' ? 'active' : '' %>" data-category="Iconic Cities">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter <%= selectedCategory === 'Mountains' ? 'active' : '' %>" data-category="Mountains">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>

  <div class="filter <%= selectedCategory === 'Castles' ? 'active' : '' %>" data-category="Castles">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter <%= selectedCategory === 'Amazing pool' ? 'active' : '' %>" data-category="Amazing pool">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing pool</p>
  </div>

  <div class="filter <%= selectedCategory === 'Camping' ? 'active' : '' %>" data-category="Camping">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter <%= selectedCategory === 'Farms' ? 'active' : '' %>" data-category="Farms">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter <%= selectedCategory === 'Arctic' ? 'active' : '' %>" data-category="Arctic">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>

  <div class="filter <%= selectedCategory === 'Domes' ? 'active' : '' %>" data-category="Domes">
    <div><i class="fa-solid fa-igloo"></i></i></div>
    <p>Domes</p>
  </div>
  <div class="filter <%= selectedCategory === 'Boats' ? 'active' : '' %>" data-category="Boats">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row g-4">
    <% for(let listing of allListings) { %>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card listing-card h-100 shadow-sm">
          <div class="position-relative">
            <img src="<%= listing.image.url %>" class="card-img-top rounded-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
            <span class="position-absolute top-0 end-0 p-2">
              <i class="bi bi-heart"></i>
            </span>
          </div>
          <div class="card-body">
            <h6 class="card-title mb-2"><%= listing.title %></h6>
            <span class="badge text-bg-secondary"><%= listing.category || 'Other' %></span>
            <p class="card-text mb-1">
              <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b> / night
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Category filter click: navigate with ?category=
  document.querySelectorAll('.filter[data-category]').forEach((el) => {
    el.addEventListener('click', () => {
      const cat = el.getAttribute('data-category');
      const params = new URLSearchParams(window.location.search);
      if (params.get('category') === cat) {
        // If already filtered by this category, remove filter
        params.delete('category');
      } else {
        params.set('category', cat);
      }
      const next = `${window.location.pathname}?${params.toString()}`;
      window.location.assign(next);
    });
  });
</script>
